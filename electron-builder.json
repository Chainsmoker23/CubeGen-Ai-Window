{
    "appId": "com.cubegen.windows",
    "productName": "CubeGen AI Studio",
    "publish": [
        {
            "provider": "github",
            "owner": "Chainsmoker23",
            "repo": "CubeGen-Ai-Window"
        }
    ],
    "directories": {
        "output": "dist_app"
    },
    "files": [
        "dist/**/*",
        "dist-electron/**/*",
        "public/icon.png"
    ],
    "asar": true,
    "mac": {
        "target": "dmg",
        "icon": "public/icon.png"
    },
    "win": {
        "icon": "public/icon.png",
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        ]
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "shortcutName": "CubeGen AI Studio",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
    },
    "protocols": [
        {
            "name": "CubeGen AI Studio",
            "schemes": [
                "cubegen"
            ]
        }
    ]
}